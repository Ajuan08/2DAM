<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UltimoRepasoMAUI.MVVM.View.EditarTareaView"
             Title="EditarTareaView">
    <VerticalStackLayout>
        <Label Text="Editar Tarea" FontSize="Large" HorizontalOptions="Center" />
        <Entry Placeholder="Nombre" Text="{Binding TareaAEditar.Nombre}" />

        <Label Text="Editar Descripcion" />
        <Editor Text="{Binding TareaAEditar.Descripcion}" />

        <Button Text="Guardar" Command="{Binding GuardarCambios}" />
        <Button Text="Cancelar" Clicked="Button_Clicked" />
    </VerticalStackLayout>
</ContentPage>