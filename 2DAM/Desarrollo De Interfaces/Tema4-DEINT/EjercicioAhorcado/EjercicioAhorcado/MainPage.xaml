<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjercicioAhorcado.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <Label  Text="Errores: 0 de 5" HorizontalOptions="Center" FontAttributes="Bold" />

            <Image Source="img0.jpg" HeightRequest="185" />

            <Label  Text="Has Ganado!"  HorizontalOptions="Center" FontAttributes="Bold" />

            <Button  x:Name="CounterBtn"  Text="Reiniciar" HorizontalOptions="Center" />

            <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" BindableLayout.ItemsSource="{Binding letras}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Button  Text="{Binding}" BackgroundColor="Purple" />
                        </StackLayout>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
