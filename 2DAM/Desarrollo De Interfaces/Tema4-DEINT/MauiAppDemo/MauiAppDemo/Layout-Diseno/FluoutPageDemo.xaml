<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppDemo.Layout_Diseno.FluoutPageDemo"
             Title="FluoutPageDemo"
            FlyoutLayoutBehavior="Popover">

    <FlyoutPage.Flyout>
        <ContentPage Title="My App" Background="Black">
            <Label Text="Hola desde mi flout" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
        </ContentPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <ContentPage Background="Red">
            <Label Text="Hola desde el Detail" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
        </ContentPage>
    </FlyoutPage.Detail>
</FlyoutPage>