<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio8Tareas.MVVM.View.Vista2"
             Title="Vista2">
    <VerticalStackLayout>
        <Frame BackgroundColor="Blue">
            <Label Text="Añadir nueva tarea" TextColor="White" FontSize="Large" HorizontalOptions="Start" VerticalOptions="Center"/>
        </Frame>
        <Frame BackgroundColor="White">
            <Grid ColumnDefinitions="*,*,*,*" RowDefinitions="*,*,*,*">
                <Entry Placeholder="Introduce Nueva Tarea" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" HorizontalTextAlignment="Center"/>
                <BoxView Margin="5"  Color="Black" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" />
                <Button Text="Añadir Tarea" Grid.Column="1" Grid.Row="3" CornerRadius="50"/>
                <Button Text="Añadir Categoria" Grid.Column="2" Grid.Row="3" CornerRadius="50"/>
            </Grid>
        </Frame>
    </VerticalStackLayout>
</ContentPage>