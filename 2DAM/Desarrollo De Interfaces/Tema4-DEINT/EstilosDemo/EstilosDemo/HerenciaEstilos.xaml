<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EstilosDemo.HerenciaEstilos"
             Title="HerenciaEstilos">

    <ContentPage.Resources>
        <Style TargetType="Button" x:Key="butonBase">
            <Setter Property="FontSize" Value="Large" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>

        <Style x:Key="botonAzul" TargetType="Button" BasedOn="{StaticResource butonBase}">
            <Setter Property="Background" Value="Blue" />
        </Style>
    </ContentPage.Resources>
    
    
    
    <VerticalStackLayout>
        <Button Style="{StaticResource botonAzul}" Text="Azul" />
    </VerticalStackLayout>
</ContentPage>