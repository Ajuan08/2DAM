<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/botonInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="35dp"
        android:onClick="onClick"
        android:text="Inicio"
        app:layout_constraintBottom_toTopOf="@+id/botonConfiguracion"
        app:layout_constraintStart_toStartOf="@+id/botonConfiguracion" />

    <Button
        android:id="@+id/botonConfiguracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="262dp"
        android:onClick="onClick"
        android:text="ConfiguraciÃ³n"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="42dp"
        android:onClick="onClick"
        android:text="Salir"
        app:layout_constraintStart_toStartOf="@+id/botonConfiguracion"
        app:layout_constraintTop_toBottomOf="@+id/botonConfiguracion" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="238dp"
        android:layout_height="26dp"
        android:layout_marginBottom="100dp"
        android:text="EJERCICIO REPASO ACDAT MARZO"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/botonInicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>