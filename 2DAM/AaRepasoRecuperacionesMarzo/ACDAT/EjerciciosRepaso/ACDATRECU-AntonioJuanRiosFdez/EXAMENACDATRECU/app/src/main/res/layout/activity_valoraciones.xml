<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Valoraciones">

    <Button
        android:id="@+id/buttonAtrasCita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="342dp"
        android:onClick="onClick"
        android:text="Atras"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/radioGroup"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/radioGroup"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="206dp"
        android:layout_height="0dp"
        android:layout_marginTop="59dp"
        android:layout_marginBottom="86dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonAtrasCita"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rMuyBuena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Muy Buena" />

        <RadioButton
            android:id="@+id/rBuena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buena" />

        <RadioButton
            android:id="@+id/rRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regular" />

        <RadioButton
            android:id="@+id/rMala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mala" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="33dp"
        android:onClick="onClick"
        android:text="Guardar"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonAtrasCita"
        app:layout_constraintEnd_toStartOf="@+id/buttonAtrasCita" />
</androidx.constraintlayout.widget.ConstraintLayout>